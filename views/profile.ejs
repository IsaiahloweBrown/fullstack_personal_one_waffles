<!doctype html>
<html>
<head>
    <title>Creator Waffles</title>
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.38.1/dist/full.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="">

    <!-- <div class="page-header text-center"> -->
        <!-- <h1><span class="fa fa-anchor"></span> Profile Page</h1> -->
        <!-- <a href="/logout" class="btn btn-default btn-sm text-center">Logout</a>
    </div> -->
    <!-- <div class="grid grid-cols-3 divide-x">
      <div>01</div>
      <div>02</div>
      <div>03</div>
    </div> -->
    <div class="grid grid-cols-3 divide-x">
      <div class="first-grid ">
        <div>
          <div> 
            <h1 class="index-header text-6xl text-white">Creator Waffles</h1>
        </div>
        <div>
         
        </div>
        <h2 class="text-center">Add a order</h2>
          <section class="flex justify-center ">

     
        
        

           
          <% if (user.local.email) { %>
            <section class="card ">
              <form action="/orders" method="POST">
                <label for="name">Name:</label>
                <input class="form-control" type="text" value="<%= user.local.email %>" name="name" >
                <label for="sizes">Size:</label>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="sizes" value="2">
                  <label for="sizes">2 Waffles</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="sizes" value="4">
                  <label for="sizes">4 Waffles</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="sizes" value="6">
                  <label for="sizes">6 Waffles</label>
                </div>
                <label for="sizes">Style:</label>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="styles" value="Classic Tyler's Butter Milk Waffles">
                  <label for="styles">Classic Tyler's Butter Milk Waffles</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="styles" value="Creator's Blueberry Waffles">
                  <label for="styles">Creator's Blueberry Waffles</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="styles" value="America's Strawberry Waffles">
                  <label for="styles">America's Strawberry Waffles</label>
                </div>
          
                <label for="sizes">Sides:</label>
    
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="sides" value="with Bacon">
                  <label for="sizes">Bacon Surprise</label>
    
                </div>    
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="sides" value="with Cheese Eggs">
                  <label for="sizes">Good Morning Cheese Eggs</label>
                </div>
                <div class="form-check ">
                  <input class="form-check-input" type="radio" name="sides" value="with Hash Brown">
                  <label for="sizes">Proper Goodbye Hash Brown</label>
                </div>      
    
                <button type="submit" class="btn btn-primary text-center ">Submit</button>
              </form>
            </section>
          </section>
          <% } %>
        </div>
       
      </div>

      <div class="second-grid">
        <section class="addedToCart text-center">
          <h3>Delivered Orders</h3>
          <ul class="orders">
          <% for(var i=0; i<orders.length; i++) {%>
            <% if (orders[i].status === "Has Been Delivered to Address") {%>
              <li class="order-delivered">
                
                <span id="nameInput"><%= orders[i].name %></span>
                <span><%= orders[i].sizes %></span>
                <span><%= orders[i].styles %></span>
                <span><%= orders[i].sides %></span>
                <span><i name="cart" class="material-symbols-outlined" aria-hidden="true">shopping_cart</i></span>
                <span><i name="close" class="material-symbols-outlined" aria-hidden="true">close</i></span>
                <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <span class="hidden"><%= orders[i]._id %></span>
              </li>
            <% } %>
          <% } %>
          </ul>
        </section>
       
      </div>
      <div class="third-grid">
        <section class="addedToCart text-center">
          <h3>Not Delivered Yet</h3>
          <ul class="orders">
          <% for(var i=0; i<orders.length; i++) {%>
            <% if (orders[i].status !== "Has Been Delivered to Address") {%>
              <li class="order text-center">
                <span><%= orders[i].name %></span>
                <span><%= orders[i].sizes %></span>
                <span><%= orders[i].styles %></span>
                <span><%= orders[i].sides %></span>
                <span><i name="cart" class="material-symbols-outlined" aria-hidden="true">shopping_cart</i></span>
                <span><i name="close" class="material-symbols-outlined" aria-hidden="true">close</i></span>
                <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <span class="hidden"><%= orders[i]._id %></span>

              </li>
            <% } %>
          <% } %>
          </ul>
        </section>

      </div>

       
      

</div>

<script src="main.js"></script>
<script src="https://cdn.tailwindcss.com"></script>
</body>
</html>
